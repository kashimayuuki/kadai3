<div id="error_explanation">
  <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>
<div class= "container">
  <div class="row">
    <div class="col-ms-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model:@book,url:book_path(@book.id),method: :patch do |f|%>
          <div class="form-group">
            <div class = "field">
              <label for = "book_title">Title</label><br>
              <%= f.text_field:title %>
            </div>
          </div>
          <div class="form-group">
            <div class = "field">
              <label for = "book_body">opinion</label><br>
              <%= f.text_area:body %>
            </div>
          </div>
          <div class="form-group">
            <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
          </div>
      <% end %>
      <%= link_to"Show",book_path(@book.id) %>
      |
      <%= link_to 'Back', books_path %>
    </div>
  </div>
</div>