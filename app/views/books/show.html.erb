<p id = "notice"><%= flash[:notice]%></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user',user:@user%>
      <%= render 'book',book:@book_new%>
    </div>

<div class ="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
    <tbody>
        <tr>
          <td>
            <%= link_to user_path(@user) do%>
            <%= image_tag @user.get_profile_image(80,80) %><br>
            <%end%>
            <%= link_to user_path(@user) do%>
              <%= @user.name%>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@book.id) do%>
              <%= @book.title %>
            <% end %>
          </td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user%>
          <td>
            <%= link_to edit_book_path(@book.id), class:"btn btn-sm btn-success" do%>
              Edit
            <%end%>
          </td>
          <td>
            <%= link_to book_path(@book.id),class:"btn btn-sm btn-danger" ,method: :delete, "data-confirm" => "本当に消しますか？" do%>
              Destroy
            <%end%>
          </td>
          <%end%>
        </tr>
    </tbody>
  </table>
</div>
  </div>
</div>