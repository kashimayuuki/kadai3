<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <%= form_with model: @user do |f| %>
          <div class="form-group">
            <label for="user_name">Name</label><br>
            <%= f.text_field :name, autofocus: true, id:"user_name", placeholder:"名前"%>
          </div>
          <div class="from-group">
            <label for="user_image">Image</label><br>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
          <div class="from-group">
            <label for="user_introduction">introduction</label><br>
            <%= f.text_area :introduction %>
          </div>
          <%= f.submit "Update User" %>
        <% end %>
    </div>
  </div>
</div>