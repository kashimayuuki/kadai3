  <% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
